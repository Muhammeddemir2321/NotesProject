@using NotesProject.Core.DTOs;

@{
    ViewData["Title"] = "Add";
}

@model CreateNoteDto

<h1>Save Note</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-control" asp-action="Add" method="post" asp-controller="Notes">
            <div class="form-group">
                <input asp-for="Value" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="button" value="Add" class="btn-primary"/>
            </div>
        </form>
    </div>
</div>